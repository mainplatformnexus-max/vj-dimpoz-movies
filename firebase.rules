{
  "rules": {
    "admins": {
      ".read": "auth != null",
      ".write": "auth.token.email === 'vjdimpoz@gmail.com' || auth.token.email === 'mainplatform.nexus@gmail.com'",
      "$uid": {
        ".validate": "newData.val() === true || newData.val() === false"
      }
    },
    "movies": {
      ".read": true,
      ".write": "auth.token.email === 'vjdimpoz@gmail.com' || auth.token.email === 'mainplatform.nexus@gmail.com'",
      "$movieId": {
        ".validate": "newData.hasChildren(['title', 'image', 'rating', 'year'])",
        "title": {
          ".validate": "newData.isString() && newData.val().length > 0"
        },
        "image": {
          ".validate": "newData.isString() && newData.val().length > 0"
        },
        "rating": {
          ".validate": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 10"
        },
        "year": {
          ".validate": "newData.isNumber() && newData.val() >= 1900 && newData.val() <= 2100"
        },
        "createdAt": {
          ".validate": "newData.isString()"
        }
      }
    },
    "series": {
      ".read": true,
      ".write": "auth.token.email === 'vjdimpoz@gmail.com' || auth.token.email === 'mainplatform.nexus@gmail.com'",
      "$seriesId": {
        ".validate": "newData.hasChildren(['title', 'image', 'rating', 'year', 'episodes'])",
        "title": {
          ".validate": "newData.isString() && newData.val().length > 0"
        },
        "image": {
          ".validate": "newData.isString() && newData.val().length > 0"
        },
        "rating": {
          ".validate": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 10"
        },
        "year": {
          ".validate": "newData.isNumber() && newData.val() >= 1900 && newData.val() <= 2100"
        },
        "episodes": {
          ".validate": "newData.isString() || newData.hasChildren()"
        },
        "createdAt": {
          ".validate": "newData.isString()"
        }
      }
    },
    "originals": {
      ".read": true,
      ".write": "auth.token.email === 'vjdimpoz@gmail.com' || auth.token.email === 'mainplatform.nexus@gmail.com'"
    },
    "carousel": {
      ".read": true,
      ".write": "auth.token.email === 'vjdimpoz@gmail.com' || auth.token.email === 'mainplatform.nexus@gmail.com'",
      "$carouselId": {
        ".validate": "newData.hasChildren(['title', 'subtitle', 'image'])",
        "title": {
          ".validate": "newData.isString() && newData.val().length > 0"
        },
        "subtitle": {
          ".validate": "newData.isString()"
        },
        "image": {
          ".validate": "newData.isString() && newData.val().length > 0"
        },
        "createdAt": {
          ".validate": "newData.isString()"
        }
      }
    },
    "subscriptions": {
      ".read": "auth != null && (auth.token.email === 'vjdimpoz@gmail.com' || auth.token.email === 'mainplatform.nexus@gmail.com')",
      "$uid": {
        ".read": "auth != null && (auth.token.email === 'vjdimpoz@gmail.com' || auth.token.email === 'mainplatform.nexus@gmail.com' || auth.uid === $uid)",
        ".write": "auth != null && (auth.token.email === 'vjdimpoz@gmail.com' || auth.token.email === 'mainplatform.nexus@gmail.com' || auth.uid === $uid)",
        ".validate": "$uid === auth.uid",
        "planId": {
          ".validate": "newData.isString() && newData.val().length > 0"
        },
        "planName": {
          ".validate": "newData.isString() && newData.val().length > 0"
        },
        "amount": {
          ".validate": "newData.isNumber() && newData.val() > 0"
        },
        "phoneNumber": {
          ".validate": "newData.isString() && newData.val().length > 0"
        },
        "startDate": {
          ".validate": "newData.isString()"
        },
        "endDate": {
          ".validate": "newData.isString()"
        },
        "active": {
          ".validate": "newData.isBoolean()"
        },
        "createdAt": {
          ".validate": "newData.isString()"
        }
      }
    },
    "wallet": {
      ".read": "auth != null && (auth.token.email === 'vjdimpoz@gmail.com' || auth.token.email === 'mainplatform.nexus@gmail.com')",
      "balance": {
        ".read": "auth != null && (auth.token.email === 'vjdimpoz@gmail.com' || auth.token.email === 'mainplatform.nexus@gmail.com')",
        ".write": "auth != null",
        ".validate": "newData.isNumber()"
      },
      "transactions": {
        ".read": "auth != null && (auth.token.email === 'vjdimpoz@gmail.com' || auth.token.email === 'mainplatform.nexus@gmail.com')",
        ".write": "auth != null",
        "$txId": {
          ".validate": "newData.hasChildren(['type', 'amount', 'timestamp'])"
        }
      }
    },
    "users": {
      ".read": "auth != null && (auth.token.email === 'vjdimpoz@gmail.com' || auth.token.email === 'mainplatform.nexus@gmail.com')",
      ".write": "auth != null",
      "$uid": {
        ".read": "auth != null && (auth.token.email === 'vjdimpoz@gmail.com' || auth.token.email === 'mainplatform.nexus@gmail.com' || auth.uid === $uid)",
        ".write": "auth != null && (auth.token.email === 'vjdimpoz@gmail.com' || auth.token.email === 'mainplatform.nexus@gmail.com' || auth.uid === $uid)",
        ".validate": "$uid === auth.uid",
        "email": {
          ".validate": "newData.isString() && newData.val().length > 0"
        },
        "role": {
          ".validate": "newData.isString() && (newData.val() === 'admin' || newData.val() === 'user')"
        },
        "createdAt": {
          ".validate": "newData.isString()"
        },
        "lastLogin": {
          ".validate": "newData.isString()"
        }
      }
    }
  }
}
